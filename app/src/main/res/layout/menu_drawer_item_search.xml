<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:background="@drawable/menu_selected_item"
    android:clickable="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/icon_search_menu"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/icon_menu_search_unselect" />

    <TextView
        android:id="@+id/tv_menu_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/icon_search_menu"
        android:layout_toRightOf="@id/icon_search_menu"
        android:text="@string/tv_search_menu"
        android:textColor="@color/default_textview_menu"
        android:textSize="18dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/icon_menu_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:src="@drawable/ic_forward" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/icon_search_menu"
        android:layout_toRightOf="@+id/icon_search_menu"
        android:background="@color/menu_divider" />


</RelativeLayout>