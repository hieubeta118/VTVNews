<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:clickable="true"
    android:background="@drawable/menu_selected_item"
    android:orientation="vertical">

    <TextView
        android:id="@+id/time_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:text="16:30"
        android:textColor="@color/gray"
        android:textSize="17sp" />


    <LinearLayout
        android:id="@+id/cameraView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/time_schedule"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgCamera"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/camera"
            android:visibility="gone"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/relative_sub_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/cameraView"
        android:layout_toRightOf="@id/cameraView"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Thời sự quốc tế 17h"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Day la description"
            android:textColor="@color/gray"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>