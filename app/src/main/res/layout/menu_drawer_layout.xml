<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_bg"
    android:orientation="vertical">

    <View
        android:id="@+id/shadow_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_top_padding"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark" />

    <include
        android:id="@+id/menu_header"
        layout="@layout/menu_drawer_header" />

    <include
        android:id="@+id/menu_search"
        layout="@layout/menu_drawer_item_search" />

    <include
        android:id="@+id/menu_offline"
        layout="@layout/menu_drawer_item_offline" />

    <include
        android:id="@+id/menu_options"
        layout="@layout/menu_drawer_item_options" />

    <include
        android:id="@+id/menu_notify"
        layout="@layout/menu_drawer_notify" />


</LinearLayout>